{
    "configurations": [
        {
            "name": "Engine",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/../externals/**",
                "${workspaceFolder}/../engine/**",
                "{{ PYTHON_INCLUDE_DIR }}"
            ],
            "defines": [
                "{{ PLATFORM_DEFINE }}",
                "MD_DEBUG",
                "MD_USE_VULKAN=1",
                "MD_USE_OPENGL=0",
                "PROJECT_BASE_DIR=\"{{ BASE_DIR }}\""
            ],
            "compilerPath": "{{ COMPILER_PATH }}",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "{{ INTELLISENSE_MODE }}"
        }
    ],
    "version": 4
}
