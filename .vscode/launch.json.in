{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {% for example in ENGINE_EXAMPLES -%}
        {
            "name": "{{ example }} Example",
            "type": "cppdbg",
            "request": "launch",
            {% if PLATFORM_DEFINE == "PLATFORM_IS_LINUX" -%}
            "program": "${workspaceFolder}/engine/build/debug/examples/{{ example }}",
            {% elif PLATFORM_DEFINE == "PLATFORM_IS_WINDOWS"-%}
            "program": "${workspaceFolder}/engine/build/debug/examples/Debug/{{ example }}.exe",
            {% endif -%}
            "args": [],
            {% if PLATFORM_DEFINE == "PLATFORM_IS_LINUX" -%}
            "cwd": "${workspaceFolder}/engine/build/debug/examples",
            {% elif PLATFORM_DEFINE == "PLATFORM_IS_WINDOWS"-%}
            "cwd": "${workspaceFolder}/engine/build/debug/examples/Debug",
            {% endif -%}
            "stopAtEntry": false,
            "preLaunchTask": "Build Engine"
        },
        {% endfor -%}
        {
            "name": "Engine Test",
            "type": "cppdbg",
            "request": "launch",
            {% if PLATFORM_DEFINE == "PLATFORM_IS_LINUX" -%}
            "program": "${workspaceFolder}/engine/build/debug/tests/MEEDEngineTests",
            {% elif PLATFORM_DEFINE == "PLATFORM_IS_WINDOWS"-%}
            "program": "${workspaceFolder}/engine/build/debug/tests/Debug/MEEDEngineTests.exe",
            {% endif -%}
            "args": [],
            {% if PLATFORM_DEFINE == "PLATFORM_IS_LINUX" -%}
            "cwd": "${workspaceFolder}/engine/build/debug/tests",
            {% elif PLATFORM_DEFINE == "PLATFORM_IS_WINDOWS"-%}
            "cwd": "${workspaceFolder}/engine/build/debug/tests/Debug",
            {% endif -%}
            "stopAtEntry": false,
            "preLaunchTask": "Build Engine"
        },
        {
            "name": "Application",
            "type": "cppdbg",
            "request": "launch",
            {% if PLATFORM_DEFINE == "PLATFORM_IS_LINUX" -%}
            "program": "${workspaceFolder}/app/build/debug/MEEDApp",
            {% elif PLATFORM_DEFINE == "PLATFORM_IS_WINDOWS"-%}
            "program": "${workspaceFolder}/app/build/debug/Debug/MEEDApp.exe",
            {% endif -%}
            "args": [],
            {% if PLATFORM_DEFINE == "PLATFORM_IS_LINUX" -%}
            "cwd": "${workspaceFolder}/app/build/debug",
            {% elif PLATFORM_DEFINE == "PLATFORM_IS_WINDOWS"-%}
            "cwd": "${workspaceFolder}/app/build/debug/Debug",
            {% endif -%}
            "stopAtEntry": false,
            "preLaunchTask": "Build Application"
        }
    ]
}
